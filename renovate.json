{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["\\.(?:cs|fs|vb)?proj$", "\\.(?:props|targets)$"],
      "matchStrings": [
        "<Import[^\\/>]+Sdk=\\\"(?<depName>.*?)\\\"[^\\/>]+Version=\\\"(?<currentValue>.*?)\\\"[^\\/>]\\/>"
      ],
      "datasourceTemplate": "nuget"
    },
    {
      "fileMatch": "global.json",
      "matchStrings": ["\"(?<depName>[^\"]*?\\.[^\"]*?)\":\\s*\"(?<currentValue>[^\"]*?)\""],
      "datasourceTemplate": "nuget"
    }
  ]
}
